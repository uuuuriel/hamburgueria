<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Hamburgueria</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>br.com.hamburgueria.rest</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>br.com.hamburgueria.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>SessaoFiltro</filter-name>
    <filter-class>br.com.hamburgueria.filtro.SessaoFiltro</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessaoFiltro</filter-name>
    <url-pattern>/resources/funcionario/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SessaoFiltro</filter-name>
    <url-pattern>/resources/produto/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SessaoFiltro</filter-name>
    <url-pattern>/resources/usuario/gerenciaUsuario.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>SessaoFiltro</filter-name>
    <url-pattern>/resources/taxa/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FuncionarioFiltro</filter-name>
    <filter-class>br.com.hamburgueria.filtro.FuncionarioFiltro</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FuncionarioFiltro</filter-name>
    <url-pattern>/resources/funcionario/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>FuncionarioFiltro</filter-name>
    <url-pattern>/resources/produto/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>FuncionarioFiltro</filter-name>
    <url-pattern>/resources/taxa/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>FuncionarioFiltro</filter-name>
    <url-pattern>/resources/usuario/gerenciaUsuario.html</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UsuarioFiltro</filter-name>
    <filter-class>br.com.hamburgueria.filtro.UsuarioFiltro</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UsuarioFiltro</filter-name>
    <url-pattern>/resources/funcionario/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UsuarioFiltro</filter-name>
    <url-pattern>/resources/usuario/gerenciaUsuario.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UsuarioFiltro</filter-name>
    <url-pattern>/resources/produto/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UsuarioFiltro</filter-name>
    <url-pattern>/resources/taxa/*</url-pattern>
  </filter-mapping>
    <servlet>
    <servlet-name>DestroiSessao</servlet-name>
    <servlet-class>br.com.chamados.servlet.DestroiSessao</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DestroiSessao</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>